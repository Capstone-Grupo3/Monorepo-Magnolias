# N8N Configuration for Render
# Este archivo es de referencia, las variables se configuran en Render dashboard

N8N_HOST=${RENDER_EXTERNAL_URL}
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_SECURE_COOKIE=true
WEBHOOK_URL=${RENDER_EXTERNAL_URL}/

# Database
DB_TYPE=postgresdb
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8nuser
# DB_POSTGRESDB_PASSWORD - Se genera automáticamente en Render
# DB_POSTGRESDB_HOST - Se obtiene del servicio de Render

# Pruning (limpieza automática de ejecuciones antiguas)
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_PRUNE_MAX_COUNT=10000

# Seguridad
N8N_AUTH_DISABLED=false
N8N_BASIC_AUTH_ACTIVE=true
# N8N_BASIC_AUTH_USER y N8N_BASIC_AUTH_PASSWORD deben configurarse en Render
